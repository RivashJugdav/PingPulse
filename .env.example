# Server settings
PORT=3000
NODE_ENV=development
API_VERSION=v1
REQUEST_TIMEOUT=5000

# HTTPS settings
HTTPS_PORT=443
USE_HTTPS=true
SSL_KEY_PATH=ssl/private.key
SSL_CERT_PATH=ssl/certificate.crt
# SSL_CA_PATH=ssl/ca_bundle.crt

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/ping-service

# Email settings (use a service account, not personal email)
EMAIL_USER=service-account@example.com
# EMAIL_PASSWORD should be stored in secrets management, not in .env
# EMAIL_PASSWORD=

# JWT settings
# JWT_SECRET should be managed by the secret rotation service
# JWT_SECRET=
JWT_EXPIRATION=7d

# Logging
LOG_LEVEL=info

# Secrets rotation schedule (cron format)
# Default: Monthly rotation on the 1st day of the month at midnight
SECRET_ROTATION_SCHEDULE="0 0 1 * *"

# Feature flags
ENABLE_SWAGGER=false

# CORS settings
CORS_ORIGIN=http://localhost:3000

# Rate limiting settings
# General API rate limit (requests per window)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Auth route rate limit (login attempts per window)
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5