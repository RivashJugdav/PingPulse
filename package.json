{
  "name": "ping-service-business",
  "version": "1.0.0",
  "description": "A service to keep web applications alive with periodic pings",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "dev:no-test": "cross-env NODE_ENV=development JEST_WORKER_ID=false nodemon --ignore '**/*.test.js' --ignore 'src/__tests__/' server.js",
    "dev:https": "cross-env USE_HTTPS=true nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --no-watch",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --no-watch",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage",
    "test:security": "cross-env NODE_ENV=test jest --config jest.security.config.js --no-watch",
    "security:test": "cross-env NODE_ENV=test jest --config jest.security.config.js --no-watch",
    "security:scan": "snyk test",
    "security:monitor": "snyk monitor",
    "security:check-deps": "knip",
    "security:audit": "npm audit",
    "generate:certs": "node scripts/generate-simple-certs.js"
  },
  "keywords": [
    "ping",
    "uptime",
    "monitoring",
    "web service"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@google/generative-ai": "^0.24.0",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "connect-timeout": "^1.9.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "dotenv-safe": "^9.1.0",
    "eslint": "^9.23.0",
    "express": "^4.18.2",
    "express-fileupload": "^1.5.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.1",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^7.8.7",
    "multer": "^1.4.5-lts.2",
    "newrelic": "^12.16.1",
    "node-cron": "^3.0.2",
    "node-fetch": "^2.6.9",
    "nodemailer": "^6.10.0",
    "ping": "^0.4.4",
    "response-time": "^2.3.2",
    "supertest": "^7.1.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "cross-env": "^7.0.3",
    "eslint-plugin-security": "^2.1.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "knip": "^5.46.2",
    "nock": "^13.5.6",
    "node-forge": "^1.3.1",
    "node-mocks-http": "^1.16.2",
    "nodemon": "^3.0.1",
    "snyk": "^1.1260.0",
    "sonarqube-scanner": "^3.1.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
